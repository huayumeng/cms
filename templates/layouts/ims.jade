include ../mixins/flash-messages

doctype html
html(lang="zh-CN")

	//- HTML HEADER
	head
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width,initial-scale=1.0,maximum-scale=1.0,minimum-scale=1.0,user-scalable=no,target-densitydpi=high-dpi")
		meta(http-equiv="X-UA-Compatible" content="IE=edge")
		meta(name="apple-mobile-web-app-capable" content="yes")
		meta(name="apple-mobile-web-app-status-bar-style" content="black")

		title= title || '喵客促销'
		link(rel="shortcut icon", href="/favicon.ico", type="image/x-icon")
		//- Customise the stylesheet for your site by editing /public/styles/site.less
		//- All .less files will be automatically compiled and minified in production.
		link(href="http://rss1.intime.com.cn/ims%2Frs%2Fcss%2Fbootstrap.min.css", rel="stylesheet")
		link(href="http://rss1.intime.com.cn/ims%2Frs%2Fcss%2Findex.css" rel="stylesheet")

		//- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
		//- Safely remove this block if you are not targeting IE8
		//-[if lt IE 9]
			script(src="http://cdn.bootcss.com/html5shiv/3.7.2/html5shiv.min.js")
			script(src="http://cdn.bootcss.com/respond.js/1.4.2/respond.min.js")
		//-[endif]

		//- Include template-specific stylesheets by extending the css block
		block css

		//- Add any other template-specific HEAD tags by extending the head block
		block head
	//- HTML BODY
	body

		//- BODY
		#app: .container

			//- NOTE:
			//- There is no .container wrapping class around body blocks to allow more flexibility in design.
			//- Remember to include it in your templates when you override the intro and content blocks!

			//- The Intro block appears above flash messages (used for temporary information display)
			block intro

			//- Flash messages allow you to display once-off status messages to users, e.g. form
			//- validation errors, success messages, etc.
			+flash-messages(messages)

			//- The content block should contain the body of your template's content
			block content

		//- FOOTER
		.container: #footer

	//- Include template-specific javascript files by extending the js block
	block js
